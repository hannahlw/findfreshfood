body {
    background: url('/assets/market.jpg') no-repeat center center fixed;
    background-image: (<%= image_url("market.jpg")%>);
    background-size: 100%;
    background-size: fixed;
}

.centered {
  position: fixed;
  top: 50%;
  left: 50%;
  /* bring your own prefixes */
  transform: translate(-50%, -50%);
}

#text {
  font-weight: bold;
  font-size: 5em;
  color: black; 
  z-index:0;
  opacity:0.5;
}

#box {
    padding: 5%;
    border-radius: 20px;
    margin: 2%;
    background-color:white;
    z-index:0;
    opacity:0.9;
}

input {
  padding: 10px;
  font-size: 2em; 
}

#meow {
  font-size: 2em;
  color: purple;
  background-color: blue;
  margin: 10px;
  padding: 4px;
}

.x {
  font-size: 1.5em;
  color: white;
}
